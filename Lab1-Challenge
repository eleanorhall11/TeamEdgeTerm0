// **** Challenge 1: Problem 1 ****
// Declare and initalize the variables with your response for the three statements above! 
// Hint: Also think about where you would declare and initialize those variables

let favoriteColor = "blue";
const birthYear = 1990;
var isStudent = true;


// **** Upchallenge! ****
// Can you also print out the data type of the variables? 

let favoriteColor = "blue";
const birthYear = 1990;
var isStudent = true;

console.log("Favorite Color:", favoriteColor, "Data Type:", typeof favoriteColor);
console.log("Birth Year:", birthYear, "Data Type:", typeof birthYear);
console.log("Is Student:", isStudent, "Data Type:", typeof isStudent);



// **** Challenge 1: Problem 2 ****
// Create a string for the different lines of the Happy Birthday Song
// Print out the song using the stings you declared.

let line1 = "Happy birthday to you,";
let line2 = "Happy birthday to you,";
let line3 = "Happy birthday dear [name],";
let line4 = "Happy birthday to you!";

let name = "John"; // Replace with the desired name

console.log(line1);
console.log(line2);
console.log(line3.replace("[name]", name));
console.log(line4);



// **** Challenge 1: Problem 3 ****
