/* -------------------------------------------- 
Challenge 2: 
Below is a set of problems to help you solidify your understanding of math operators
Write your solution code under each commented problem. 
-------------------------------------------- */
// Problem 1: Multiply two numbers and assign the result to a variable
let num1 = 5;
let num2 = 3;
let product = num1 * num2;
console.log("Problem 1:", product);

// Problem 2: Divide two numbers and assign the result to a variable
let dividend = 10;
let divisor = 2;
let quotient = dividend / divisor;
console.log("Problem 2:", quotient);

// Problem 3: Add three numbers together and assign the result to a variable
let numA = 4;
let numB = 7;
let numC = 2;
let sum = numA + numB + numC;
console.log("Problem 3:", sum);

// Problem 4: Subtract two numbers and assign the result to a variable
let minuend = 15;
let subtrahend = 8;
let difference = minuend - subtrahend;
console.log("Problem 4:", difference);

// Problem 5: Increment a number by 1 using the increment operator
let x = 5;
x++;
console.log("Problem 5:", x);

// Problem 6: Decrement a number by 1 using the decrement operator
let y = 10;
y--;
console.log("Problem 6:", y);

console.log("------------------- Challenge 2 -------------------")

